[Unit]
Description=Hook for sysmaint account lock/unlock
Before=multi-user.target
Before=sysmaint-boot.target
Before=getty.target
Before=graphical.target
Before=rads.service
Before=sysinit.target
Before=qubes-gui-agent.service
Wants=local-fs.target
After=local-fs.target

## Wait for 'systemd-tmpfiles-setup.service' to parse
## '/usr/lib/tmpfiles.d/qrexec-volatile-config.conf'
## so folder '/run/qubes-rpc' exists.
After=systemd-tmpfiles-setup.service

DefaultDependencies=no

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/libexec/user-sysmaint-split/sysmaint-boot handle-boot
StandardOutput=journal+console
StandardError=inherit

[Install]
WantedBy=basic.target
